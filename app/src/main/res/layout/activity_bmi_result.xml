<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/bmi_result_bg"
    android:gravity="center"
    android:background="#00C853"
    tools:context=".BmiResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_heading_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are Underweight"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/tv_result_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your BMI is 35"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your BMI is 35"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:text="Calculate Agein"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:id="@+id/btn_ca_id"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>


</RelativeLayout>