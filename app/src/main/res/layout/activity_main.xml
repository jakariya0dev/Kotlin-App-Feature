<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout_id"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_ad_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alert_dialog"/>

        <Button
            android:id="@+id/btn_toast_msg_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_toast"/>

        <Button
            android:id="@+id/btn_snack_bar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_snackbar"/>

        <Button
            android:id="@+id/btn_show_recycler_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_recycler_view"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_fragments_id"
            android:text="@string/fragments"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ext_font_id"
            android:text="@string/fragments"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ext_img_id"
            android:text="@string/LoadExtImg"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ext_icon_id"
            android:text="External Icon"/>

        <Button
            android:id="@+id/piano_app_btn_id"
            android:text="@string/piano_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/counter_app_btn_id"
            android:text="@string/counter_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/bmi_app_btn_id"
            android:text="@string/bmi_calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/nav_menu"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        android:id="@+id/nav_menu_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</androidx.drawerlayout.widget.DrawerLayout>